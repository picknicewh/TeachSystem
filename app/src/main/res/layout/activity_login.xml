<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/space_x4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space_x2.5"
            android:src="@mipmap/ic_logo" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:background="@drawable/round_white"
            android:hint="请输入您学号/工号"
            android:lines="1"
            android:maxLength="11"
            android:padding="@dimen/space_x1.5"
            android:drawableLeft="@mipmap/ic_user"
            android:drawablePadding="@dimen/space_x0.5"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:background="@drawable/round_white"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:padding="@dimen/space_x1.5"
            android:drawableLeft="@mipmap/ic_password"
            android:drawablePadding="@dimen/space_x0.5"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <Button
            android:id="@+id/b_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_x1.5"
            android:background="@drawable/round_orange"
            android:padding="@dimen/space"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_x_large" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_edit_password"
        android:visibility="gone"
        android:paddingRight="@dimen/space"
        android:layout_gravity="right"
        android:textColor="@color/colorPrimary"
        android:text="修改密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
