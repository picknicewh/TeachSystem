<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:padding="@dimen/space"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="原始密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:padding="@dimen/space"
            android:id="@+id/tv_ori_password"
            android:hint="请输入原密码"
            android:textSize="@dimen/ts_medium"
            android:gravity="right"
            android:inputType="textPassword"
            android:background="@drawable/gray_border_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:padding="@dimen/space"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="修改密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:padding="@dimen/space"
            android:id="@+id/tv_edit_password"
            android:hint="请输入修改密码"
            android:textSize="@dimen/ts_medium"
            android:gravity="right"
            android:inputType="textPassword"
            android:background="@drawable/gray_border_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:padding="@dimen/space"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="确认密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:padding="@dimen/space"
            android:id="@+id/tv_com_password"
            android:hint="请输入确认修改密码"
            android:textSize="@dimen/ts_medium"
            android:gravity="right"
            android:inputType="textPassword"
            android:background="@drawable/gray_border_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_conform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_x1.5"
        android:background="@drawable/round_orange"
        android:padding="@dimen/space"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_x_large" />
</LinearLayout>
