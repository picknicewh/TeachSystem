<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_title"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/space_x2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="姓名"
            android:textColor="@color/minor_text"
            android:textSize="@dimen/ts_large" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="易烊千玺"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/ts_large" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_startTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/space_x2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始时间"
            android:textColor="@color/minor_text"
            android:textSize="@dimen/ts_large" />

        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="2016-07-13 11:30"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/ts_large" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_endTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/space_x2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结束时间"
            android:textColor="@color/minor_text"
            android:textSize="@dimen/ts_large" />

        <TextView
            android:id="@+id/tv_endTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="2016-07-13 11:30"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/ts_large" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_course"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:padding="@dimen/space_x2"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"

            android:text="请假事由"
            android:textColor="@color/minor_text"
            android:textSize="@dimen/ts_large" />

        <TextView
            android:id="@+id/tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择事由"
            android:drawableRight="@mipmap/ic_arrow_down"
            android:textColor="@color/main_text_color"
            android:drawablePadding="@dimen/space_x0.5"/>

        <EditText
            android:id="@+id/et_cause"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="@dimen/space"
            android:background="@drawable/gray_border_bg"
            android:gravity="left"
            android:maxLength="200"
            android:textColor="@color/minor_text"
            android:visibility="gone"
            android:windowSoftInputMode="stateHidden|adjustResize" />
    </LinearLayout>

</LinearLayout>